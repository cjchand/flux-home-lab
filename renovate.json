{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "flux": {
    "managerFilePatterns": [
      "clusters/dev/apps/.*/helmrelease\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "flux"
      ],
      "matchFileNames": [
        "clusters/dev/apps/**/helmrelease.yaml"
      ],
      "groupName": "HelmRelease and image updates"
    }
  ]
}
