{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "flux": {
    "managerFilePatterns": [
      "/clusters/dev/apps/.+\\.yaml$/"
    ]
  },
  "helm-values": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "flux",
        "helm-values"
      ],
      "matchFileNames": [
        "clusters/dev/apps/**/helmrelease.yaml"
      ],
      "groupName": "HelmRelease and image updates"
    }
  ]
}
