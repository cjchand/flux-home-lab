{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "helm-values": {
    "enabled": true
  },
  "packageRules": [
    {
      "managers": ["helmfile", "helm-values"],
      "matchPaths": [
        "clusters/dev/apps/**/helmrelease-*.yaml"
      ],
      "groupName": "HelmRelease updates"
    }
  ]
}
