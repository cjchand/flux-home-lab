{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "helm-values": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "helmfile",
        "helm-values"
      ],
      "matchFileNames": [
        "clusters/dev/apps/**/helmrelease.yaml"
      ],
      "groupName": "HelmRelease updates"
    },
    {
      "matchManagers": ["docker"],
      "matchDatasources": ["docker"],
      "matchFileNames": [
        "clusters/dev/apps/**/helmrelease.yaml"
      ],
      "groupName": "App image tag updates"
    }
  ]
}
